<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjetoCM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cerulean</item>
        <item name="colorPrimaryVariant">@color/indigo_dye</item>
        <item name="colorOnPrimary">@color/almost_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF0000</item>
        <item name="colorSecondaryVariant">#FF00FF</item>
        <item name="colorOnSecondary">#FFFF00</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/cerulean</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/cerulean</item>
    </style>

    <style name="MySliderStyle" parent="Widget.MaterialComponents.Slider">
        <item name="trackColorActive">@color/cerulean</item>
        <item name="thumbColor">@color/cerulean</item>
        <item name="haloColor">@color/indigo_dye</item>
    </style>
    <style name="MyDatePickerTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">@color/cerulean</item>
    </style>

    <style name="RatingBar" parent="Theme.ProjetoCM">
        <item name="colorControlActivated">@color/colorRatingActive</item>
        <item name="colorControlNormal">@color/colorRatingInactive</item>

    </style>


</resources>